---
import TechPill from "./TechPill.astro";
const { period, position, company, description, technologies } = Astro.props;
---

<section class="gap-2 lg:gap-4 flex shadow p-4 flex-col lg:flex-row rounded">
  <div class="mt-1 min-w-[97px]">
    <p class="text-sm text-zinc-400 whitespace-nowrap">{period}</p>
  </div>

  <div>
    <h3 class="text-base lg:text-lg text-zinc-500 font-bold">{position}</h3>
    <p class="text-sm lg:text-base text-zinc-400">{company}</p>
    <p class="mt-2 text-xs lg:text-sm text-zinc-400">
      {description}
    </p>
    <div class="mt-2 flex gap-2 gap-y-2 flex-wrap">
      {technologies.map((name: string) => <TechPill name={name} />)}
    </div>
  </div>
</section>
