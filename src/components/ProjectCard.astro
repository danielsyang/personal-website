---
import { Picture } from "astro:assets";
import TechPill from "./TechPill.astro";
const { title, description, technologies, thumbnail } = Astro.props;
---

<section class="gap-4 flex shadow p-4">
  <div class="mt-1 min-w-[97px]">
    <Picture src={thumbnail} alt={`${title}'s thumbnail'`} width={130} />
  </div>

  <div class="">
    <h3 class="text-lg text-zinc-500 font-bold">{title}</h3>
    <p class="mt-2 text-sm text-zinc-400">
      {description}
    </p>
    <div class="mt-2 flex gap-2 gap-y-2 flex-wrap">
      {technologies.map((name: string) => <TechPill name={name} />)}
    </div>
  </div>
</section>
